{
	"extends": [
		"eslint:recommended",
		"plugin:import/recommended",
		"plugin:markdown/recommended",
		"eslint-config-prettier"
	],
	"env": {
		"shared-node-browser": true,
		"es2022": true
	},
	"parserOptions": {
		"ecmaVersion": 2022,
		"sourceType": "module"
	},
	"overrides": [
		{
			"files": ["*.cjs"],
			"env": {
				"commonjs": true
			},
			"parserOptions": {
				"sourceType": "script"
			}
		}
	]
}
